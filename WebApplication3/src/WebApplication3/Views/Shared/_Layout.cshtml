@using System.Security.Claims
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Kiele's</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li><a asp-action="Login" asp-controller="Account">Login</a></li>
                        <li><a asp-action="Register" asp-controller="Account">Register</a></li>
                    </ul>
@if (User.IsSignedIn())
{
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="navbar-form">
                                <input type="submit" value="Logout" class="btn btn-default" />
                            </form>
                        </li>
                    </ul>
}
                </div><!--/.nav-collapse -->
            </div><!--/.container-fluid -->
        </nav>


        <div class="row">
            @RenderBody()
        </div>

        <footer class="footer">
            <p>@RenderSection("footer", false)</p>
        </footer>
    </div>

